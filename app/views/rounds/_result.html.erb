<%= turbo_frame_tag round do %>
  <% if round.result %>
    <div class="pt-12 pb-8">
      <p class="text-2xl font-semibold text-center mb-2 text-gray-800"> <%= round.result == "success" ? "Congratulations! You got it right!" : "Game over! You've used all your tries."  %> </p>
      <p class="text-gray-600 text-md text-center">
        <%= round.result == "success" ? 
              " The player is #{round.footballer.name}. It took you only #{round.total_guesses} attempts ðŸ˜„" 
              : "Too bad. You had #{round.total_guesses} attempts, but you couldn't meet the target! The player is #{round.footballer.common_name} of #{round.footballer.current_club}." %>
      </p>
    </div>
    <div class="flex justify-center space-x-6 items-center mb-4">
      <%= link_to new_round_path, class: "inline-block text-blue-500 text-sm flex items-center gap-x-2", data: { turbo_frame: "_top" } do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99" />
        </svg>
        Play again
      <% end %>
      <%= link_to root_path, class: "inline-block text-blue-500 text-sm flex items-center gap-x-2" do %>
        Go Home
      <% end %>
    </div>
  <% else %>
    <p class="text-2xl font-semibold py-10 text-center text-gray-800"><%= response %></p>
    <p class="text-sm text-gray-500 w-full text-left mb-3">You have <%= round.attempts_left %> tries left</p>
  <% end %>
<% end %>
